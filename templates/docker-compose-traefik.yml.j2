version: '3'
services:
  traefik:
    image: {{ docker_image_traefik }}
    restart: unless-stopped
    ports:
      - 80:80
      - 443:443
    networks:
      - {{ traefik_network_name }}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - {{ traefik_path }}/traefik.toml:/etc/traefik/traefik.toml
      - {{ traefik_path }}/acme.json:/acme.json

networks:
  {{ traefik_network_name }}:
    external: true

